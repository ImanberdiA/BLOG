@using Blog.Models
@model AppUser

@{
    ViewBag.Title = "GetPosts";
}

<h2>Посты автора @Model.UserName</h2>

@foreach (var post in Model.Posts)
{
    Тема:<h5>@post.Title</h5> <br>
    Текст: <h5>@post.Text</h5>
    using (Html.BeginForm("Edit", "Blog", FormMethod.Get))
    {
        <input name="id" value="@post.Id" type="hidden">
        <button class="btn btn-primary btn-xs" type="submit">Редактировать</button>
    }
}