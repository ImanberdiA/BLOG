@using Blog.Models
@model AppUser

@{
    ViewBag.Title = "Посты";
}

@using (Html.BeginForm("Create", "Blog", FormMethod.Get))
{
    <button class="btn btn-success btn-xs" type="submit">Создать</button>
}

<h2>Посты автора @Model.UserName</h2>
@if (Model.Posts.Count() == 0)
{
    <h4>Нет постов</h4>
}

<div class="table-responsive">
    <table>
        @foreach (var post in Model.Posts)
        {
            <tr><td><b>@post.Title</b></td></tr>
            <tr><td>@post.Text</td></tr>
            <tr>
                <td>
                    @using (Html.BeginForm("Delete", "Blog", FormMethod.Get))
                    {
                        <input name="id" value="@post.Id" type="hidden">
                        <button class="btn btn-primary btn-xs" type="submit">Удалить</button>
                        @Html.ActionLink("Редактировать", "Edit", new { id = post.Id },
                                            new { @class = "btn btn-danger btn-xs", style = "float: left; margin-right: 10px" })
                    }
                </td>
            </tr>
        }
    </table>
</div>