@model Blog.Models.Post

@{
    ViewBag.Title = "CreatePost";
}

<h2>Создание поста</h2>

@using (Html.BeginForm("Create", "Blog", FormMethod.Post))
{
    //@Html.TextBoxFor(x => x.Title) <br />
    //@Html.TextAreaFor(x => x.Text, 10, 10, null)
    //<input type="submit" value="Создать">
    <div class="form-group">
        <label>Название</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Текст</label>
        @Html.TextAreaFor(x => x.Text, 10, 10, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>

    @Html.ActionLink("Отмена", "Index", "Blog")
}