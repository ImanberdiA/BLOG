@using Blog.Models
@model IEnumerable<Post>

@{
    ViewBag.Title = "Главная страница";
}

@Html.ActionLink("Войти", "Login", "Authentication", null, new { @class = "btn btn-primary btn-xs", style = "float: left; margin-right: 50px" })

<h1>Главная страница</h1>

@if (Model.Count() == 0)
{
    <h4>Нет постов</h4>
}

<div class="table-responsive">
    <table>
        @foreach (var post in Model)
        {
            <tr><td><b>@post.Title</b></td></tr>
            <tr><td>@post.Text</td></tr>
            <tr><td>@post.Author.UserName</td></tr>
        }
    </table>
</div>